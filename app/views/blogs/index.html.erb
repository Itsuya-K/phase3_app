

<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>ID</th>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.id %></td>
    <td><%= blog.user.name %></td>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <% if blog.image.url %>
      <td><%= image_tag blog.image.url, class: 'image' %></td>
    <% end %>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <% if logged_in? %>
      <% if blog.user_id == current_user.id %>
        <td><%= link_to "ブログを編集する", edit_blog_path(blog.id) %></td>
        <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
      <% end %>
    <% end %>
  </tr>
<% end %>
</table>

<%= link_to 'ブログを作成する', new_blog_path %>
